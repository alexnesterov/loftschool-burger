.section.burgers
  .burgers__inner
    .container
      .slider
        .slider__wrap.owl-carousel

          .slider__item
            .burger-composition
              .burger-composition__text Состав
              .burger-composition__dropdown
                table.burger-composition__table

                  tr.burger-composition__row
                    td.burger-composition__cell
                      include ../assets/images/icons/beef.svg
                    td.burger-composition__cell
                      .burger-composition__name Говядина
                    td.burger-composition__cell
                      .burger-composition__amount 300 г

                  tr.burger-composition__row
                    td.burger-composition__cell
                      include ../assets/images/icons/buns.svg
                    td.burger-composition__cell
                      .burger-composition__name Булочки
                    td.burger-composition__cell
                      .burger-composition__amount 100 г

                  tr.burger-composition__row
                    td.burger-composition__cell
                      include ../assets/images/icons/salad.svg
                    td.burger-composition__cell
                      .burger-composition__name Зелень
                    td.burger-composition__cell
                      .burger-composition__amount 70 г

                  tr.burger-composition__row
                    td.burger-composition__cell
                      include ../assets/images/icons/sauce.svg
                    td.burger-composition__cell
                      .burger-composition__name Соус
                    td.burger-composition__cell
                      .burger-composition__amount 150 г

                  tr.burger-composition__row
                    td.burger-composition__cell
                      include ../assets/images/icons/cucumber.svg
                    td.burger-composition__cell
                      .burger-composition__name Овощи
                    td.burger-composition__cell
                      .burger-composition__amount 200 г

                  tr.burger-composition__row
